---
import type { Post } from '../lib/interfaces.ts'
import { getPostLink } from '../lib/blog-helpers.ts'
import PostTags from './PostTags.astro'

export interface Props {
  prevPost: Post
  nextPost: Post
}

const { prevPost, nextPost } = Astro.props
---

<div class="post-relative-link">
  <div class="post-recommend">
    <div class="link">
      {
        nextPost && (
          <a href={getPostLink(nextPost.Slug)} class="colored">
          <div>◀︎ Next</div>
          <div>{nextPost.Title}</div>
          {/* <PostTags post={nextPost} enableLink={false} /> */}
        </a>
      )
    }
  </div>
  <div class="link">
    {
      prevPost && (
        <a href={getPostLink(prevPost.Slug)} class="colored">
          <div style="text-align: right;">▶︎ Previous</div>
          <div>{prevPost.Title}</div>
          {/* <PostTags post={prevPost} enableLink={false} /> */}
        </a>
      )
    }
  </div>
</div>
  <div class="link">
    <a href='#top' class="text">↑Top</a>
  </div>
</div>

<style>
  div.post-relative-link {
    margin-top: 1rem;
  }
  .post-recommend {
    display: flex;
    flex-direction: row;
    justify-content: center;
    gap: 16px;
  }

  @media (max-width: 640px) {
    .post-recommend {
      flex-direction: column;
    }
  }
  .link {
    display: block;
    /* margin-top: 0.6rem; */
    justify-items: stretch;
  }
  .link > a {
    display: block;
    text-align: center;
    line-height: 1.2rem;
    font-size: 0.95rem;
  }
  .link > a.text {
    margin-top: 1rem;
    padding: 0.5rem;
    color: inherit;
    font-size: 1rem;
    text-decoration: underline;
    font-weight: 500;
  }
  .link > a.colored {
    padding: 1rem;
    border-radius: var(--radius);
    color: var(--fg);
    background: rgba(227, 226, 224, 0.5);
  }
  .link > a.colored > div:first-child {
    width: auto;
    text-align: left;
    font-size: 0.85rem;
  }
  .link > a.colored > div:nth-child(2) {
    width: auto;
    padding: 0.2rem 0 0.4rem;
    text-align: left;
    font-size: 1rem;
    font-weight: bold;
  }
</style>
