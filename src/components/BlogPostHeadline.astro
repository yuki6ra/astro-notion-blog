---
import type { Block } from '../lib/interfaces.js'
import TableOfContents from './notion-blocks/TableOfContents.astro';

export interface Props {
  heading: string
  blocks: Block[]
  isAside: boolean
  class?: string
}
const { blocks, isAside, class: customStyle } = Astro.props

// Notion側にTableOfContentsが存在しない場合でも作れるように仮想のアイテムを作成
const dummyBlock: Block = {
  Id: "",
  Type: "",
  HasChildren: false,
  TableOfContents: {
    Color: "gray"
  }
}

const headings = blocks.filter((b: Block) =>
    ['heading_1', 'heading_2', 'heading_3'].includes(b.Type)
  )
---

<div class={`post-headline ${isAside ? 'aside' : 'main'} ${customStyle}`}>
  <details id="toc-details">
    <summary><strong>目次</strong></summary>
    <TableOfContents block={dummyBlock} headings={headings}/>
  </details>
</div>

<script>
  const details = document.getElementById('toc-details') as HTMLDetailsElement;
  const mediaQuery = window.matchMedia('(min-width: 701px)');

  function handleViewportChange(mq: MediaQueryList | MediaQueryListEvent) {
    if (mq.matches) {
      details.open = true;
    } else {
      details.open = false;
    }
  }

  mediaQuery.addEventListener('change', handleViewportChange);
  handleViewportChange(mediaQuery);

  // 目次アクティブ制御
  function throttle(fn: () => void, wait: number) {
    let time = Date.now();
    return function() {
      if ((time + wait - Date.now()) < 0) {
        fn();
        time = Date.now();
      }
    }
  }

  function setActiveTocLink() {
    const headings = Array.from(document.querySelectorAll('a[id]'));
    const tocLinks = Array.from(document.querySelectorAll('.table-of-contents > a[data-id]'));
    let activeId = '';
    const scrollY = window.scrollY;
    for (let i = headings.length - 1; i >= 0; i--) {
      const rect = headings[i].getBoundingClientRect();
      if (rect.top + window.scrollY <= scrollY + 80) { // 80pxはヘッダー分のオフセット
        activeId = headings[i].id;
        break;
      }
    }
    tocLinks.forEach(link => {
      if (link.getAttribute('data-id') === activeId) {
        link.classList.add('active');
      } else {
        link.classList.remove('active');
      }
    });
  }

  window.addEventListener('scroll', throttle(setActiveTocLink, 100));
  window.addEventListener('DOMContentLoaded', setActiveTocLink);
</script>

<style>
  .post-headline {
    background-color: #FBFBFB;
    border-radius: 0.5rem;
    padding: 1rem 1.5rem;
    z-index: 10;
    height: fit-content;
    max-height: 80vh;
    overflow: scroll;
    top: 68px;
    position: sticky;
    transition-duration: .3s;
    z-index: 1;
  }

  #toc-details > summary {
    cursor: pointer;
    outline: none;
  }

  @media (max-width: 700px) {
    .post-headline.main {
      display: block;
      position: relative;
      top: auto;
    }
  }

  @media (min-width: 701px) {
    .post-headline.aside {
      display: block;
    }

    .post-headline.main #toc-details > summary {
      cursor: default;
      pointer-events: none;
    }

    .post-headline.main #toc-details > summary::-webkit-details-marker {
      display: none;
    }

    .post-headline.main #toc-details > summary {
      list-style: none;
    }
  }
</style>
