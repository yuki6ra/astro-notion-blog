<script>
  // ã„ã„ã­ãƒœã‚¿ãƒ³ã®è¦ç´ ã‚’å–å¾—
  document.addEventListener('DOMContentLoaded', async () => {
    const upvoteButton = document.getElementById('upvote-button') as HTMLButtonElement;
