    // ã„ã„ã­æ•°ã‚’å¢—ã‚„ã™é–¢æ•°
    async function incrementUpvote(slug: string) {
      try {
        const response = await fetch(`/api/upvote?slug=${slug}`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
        });
